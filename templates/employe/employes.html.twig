{% extends './base.html.twig' %}
{% block title %}Liste des employés - TaskLinker{% endblock %}
{% block body %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>Équipe</h1>
            </div>
        </header>
        <div id="content">
            <table id="team-container">
                <thead>
                <tr>
                    <th>Prénom, Nom</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for employe in employes %}
                <tr>
                    <td>
                        <div class="employee-infos">
                            <div class="employee-avatar">
                                {{ employe.prenom|default('')|slice(0, 1)|upper}}{{ employe.nom|default('')|slice(0, 1)|upper}}
                            </div>
                            <div class="employee-coords">
                                <strong>{{ employe.prenom}} {{ employe.nom}}</strong>
                                <span>{{employe.emailpro}}</span>
                            </div>
                        </div>
                    </td>
                    <td>{{ employe.typecontrat }}</td>
                    <td>
                        <a class="button button-edit-team" href="employe.html">
                            Éditer
                        </a>
                        <a class="delete-team" href="#">
                            Supprimer
                        </a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
