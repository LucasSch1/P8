{% extends 'base.html.twig' %}
{% block title %}Liste des projets - TaskLinker{% endblock %}
{% block body %}
        <main>
            <header>
                <div id="current-user"></div>
                <div id="title-page">
                    <h1>Projets</h1>
                </div>
            </header>
            <div id="content">
                <div id="projects-container">
                    {% for projet in projets %}
                    <article class="card-project">
                        <a href="/projets/{{ projet.id }}/view">
                            <h2>{{ projet.nomProjet }}</h2>
                        </a>
                        <div class="card-project-icons">
                            <a href="{{ path('app_projet_edit',{'id': projet.id}) }}"><i class="fa-solid fa-pen"></i></a>
                            <a href="{{ path('app_projet_delete',{'id': projet.id}) }}"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </article>
                    {% endfor %}
                    <article class="card-project">
                        <a href="{{ path('app_projet_add') }}">
                            <i class="fa-solid fa-circle-plus add-project-icon"></i>
                            <h2>Ajouter un projet</h2>
                        </a>
                    </article>
                </div>
            </div>
        </main>
{% endblock %}
